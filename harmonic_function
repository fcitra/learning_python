def harmonic(nterms):
  """This function returns the sum of the first n items of a harmonic series
  
  H(n) = 1 + 1/2 + 1/3 + 1/4 + 1/5 + ... + 1/n
  
  nterm is the variable to store the number of terms you'd like to sum
  """
  
    if nterms <= 1:
      return nterms
    else:
      return ((1/nterms) + harmonic(nterms-1))
